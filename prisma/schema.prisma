generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  name      String
  username  String
  password  String
  phone     String
  role      String?
  Fraudster Fraudster[]
}

model Fraudster {
  id             String   @id @default(uuid())
  name           String?
  surname        String?
  passportSeriya String
  passportCode   String
  type           String
  userId         String
  user           User     @relation(fields: [userId], references: [id])
  createdAt      DateTime @default(now())
}
