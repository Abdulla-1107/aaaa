generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  name      String
  username  String
  password  String
  phone     String
  role      String?
  Fraudster Fraudster[]
}

model Fraudster {
  id           String   @id @default(uuid())
  name         String
  surname      String
  image        String
  passportId   String
  passport     Passport @relation(fields: [passportId], references: [id])
  passportCode String
  location     String?
  description  String?
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  createdAt    DateTime @default(now())
}

model Passport {
  id         String      @id @default(uuid())
  series     String      @unique
  Fraudsters Fraudster[]
}
